<mvc:View
    controllerName="santos.sapui5ts.controller.InvoiceList"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
>
    <List id="idInvoicesList"
        class="sapUiResponsiveMargin"
        headerText="{i18n>invoiceListTitle}"
        width="auto"
        items="{invoicesModel>/Invoices}"
    >
        <items>
            <ObjectListItem id="idInvoicesObjectListItem"
                title="{invoicesModel>Quantity} x {invoicesModel>ProductName}"
                number="{
                    parts: [
                        'invoicesModel>ExtendedPrice',
                        'currencyModel>/eur'
                    ],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: false
                    }
                }"
                numberUnit="{currencyModel>/eur}"
            />
        </items>
    
    </List>


</mvc:View>