<core:FragmentDefinition 
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:form="sap.ui.layout.form"
>
	<Panel id="idFragmentPanel" class="sapUiResponsiveMargin" headerText="{i18n>fragmentTittle}" width="auto">
		<content>
			<form:SimpleForm id="idSimpleForm" editable="true">
				<form:content>
					<Label id="idNameLabel" text="{i18n>name}"/>
					<Input id="idNameFragInput" width="50%" value="{/client/name}"/>
					<Label id="idAgeLabel" text="{i18n>age}"/>
					<Input id="idAgeFragInput" width="20%" value="{/client/age}"/>
				</form:content>
			</form:SimpleForm>
		</content>
	</Panel>
</core:FragmentDefinition>